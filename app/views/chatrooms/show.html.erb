<%= render 'shared/navbar_user' %>
<div class="container my-5">
  <%= render 'my_chatrooms' %>
  <div class="container col-10 border p-3 rounded-sm">
              <div id="messages" data-chatroom-id="<%= @chatroom_first.id %>">
          <% @chatroom_first.messages.each do |message| %>
            <div class="message-container" id="message-<%= message.id %>">
              <i class="author">
                <span><%= message.user.first_name %></span>
                <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
              </i>
              <p><%= message.content %></p>
            </div>
          <% end %>
        </div>

        <%= simple_form_for [ @chatroom_first, @message ], remote: true do |f| %>
          <%= f.input :content, label: false, placeholder: "Message" %>
          <%= f.submit "Sauvegarder" %>
        <% end %>
  </div>
</div> 





