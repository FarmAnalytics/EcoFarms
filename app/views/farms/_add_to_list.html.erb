<div class="dropdown ">

  <a class="btn btn-success text-white dropdown-toggle ml-3" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Ajoutez à votre liste
  </a>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
  <% @wish_lists.each do |list| %>
    <a class="dropdown-item" href="#"><%= list.name %></a>
  <% end %>
    <!-- Button trigger modal -->
    <a href="#" type="button" class="btn btn-primary dropdown-item" data-toggle="modal" data-target="#exampleModal">Créer une nouvelle liste</a>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Créer une nouvelle Liste</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(@list) do |f| %>
        <%= f.input :name %>
        <%= f.submit "Sauvegarder" %>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>