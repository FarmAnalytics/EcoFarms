<div class="dropdown ml-3">
  <a class="btn btn-success text-white dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Ajoutez à votre liste
  </a>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
  <% @wish_lists.each do |list| %>
    <%= link_to list.name, farm_likes_path(@farm, params_list: list), class: "dropdown-item", method: :post %>
  <% end %>
    <!-- Button trigger modal -->
    <a href="#" type="button" class="btn btn-primary dropdown-item" data-toggle="modal" data-target="#listmodal">Créer une nouvelle liste</a>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="listmodal" tabindex="-1" role="dialog" aria-labelledby="listmodalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content text-body">
      <div class="modal-header">
        <h5 class="modal-title" id="listmodalLabel">Créez une nouvelle liste</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(@list) do |f| %>
          <%= f.input :name, placeholder: "Mes fournisseurs" %>
          <%= f.submit "Sauvegarder", class: "btn btn-success text-white my-2" %>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
