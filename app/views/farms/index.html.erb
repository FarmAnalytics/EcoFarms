<div class="bg-primary p-5">
  <div class="container ">
    <div class="banner-home row justify-content-between">
      <div class="search col-8">
        <h2 class='text-white my-4'>Trouvez un producteur en accord avec vos valeurs</h2>
          <%= simple_form_for :search, url: farms_path, method: :get do |f| %>
            <div class="search-form-control form-group">
              <input class="border border-success form-control string required" type="text" name="query" id="search_query" placeholder='Où habitez-vous?' />
            </div>
            <h5 class='text-white'>Quel type de produit cherchez-vous ?</h5>
            <div class="row justify-content-around type-plug">
              <div class="col-2 btn-group-toggle border border-success text-center rounded bg-white btn-active" data-toggle="buttons">
                <label class="btn text-success" for="Légumes">
                  <input type="checkbox" name="type[]" id="Légumes" value="Légumes"><i class="fas fa-carrot"></i>
                  <p class="mb-0">Légumes</p>
                </label>
              </div>
              <div class="col-2 btn-group-toggle border border-success text-center rounded bg-white btn-active" data-toggle="buttons">
                <label class="btn text-success" for="Fruits">
                  <input type="checkbox" name="type[]" id="Fruits" value="Fruits"><i class="fas fa-apple-alt"></i>
                  <p class="mb-0">Fruits</p>
                </label>
              </div>
              <div class="col-2 btn-group-toggle border border-success text-center rounded bg-white btn-active" data-toggle="buttons">
                <label class="btn text-success" for="Viande">
                  <input type="checkbox" name="type[]" id="Viande" value="Viande"><i class="fas fa-drumstick-bite"></i>
                  <p class="mb-0">Viande</p>
                </label>
              </div>
              <div class="col-2 btn-group-toggle border border-success text-center rounded bg-white btn-active" data-toggle="buttons">
                <label class="btn text-success" for="Crèmerie">
                  <input type="checkbox" name="type[]" id="Crèmerie" value="Crèmerie"><i class="fas fa-ice-cream"></i>
                  <p class="mb-0">Crèmerie</p>
                </label>
              </div>
              <div class="col-2 btn-group-toggle border border-success text-center rounded bg-white btn-active" data-toggle="buttons">
                <label class="btn text-success p-2" for="Vin">
                  <input type="checkbox" name="type[]" id="Vin" value="Vin"><i class="fas fa-wine-bottle"></i>
                  <p class="mb-0">Vin</p>
                </label>
              </div>
              <button type="submit" class="btn btn-success text-white my-4">
                <i class="fas fa-search"></i> Trouver mon producteur
              </button>
            </div>
          <% end %>
        </div>
        <div class='col-4'>
          <%= image_tag "market-detoured.png", alt: "Le Wagon", width: 400, class: 'illustration' %>
        </div>
    </div>    
  </div>
</div>

<div id="map"
    style="width: 100%; height: 500px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    data-latitude="<%= Geocoder.search(params[:query]).first.latitude if !params[:query].nil? %>"
    data-longitude="<%= Geocoder.search(params[:query]).first.longitude if !params[:query].nil? %>"></div>


