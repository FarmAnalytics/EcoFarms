<% @lists.each do |list| %>
  <div id="<%= list.name %>" class="tabcontent text-primary">
    <h3 class="py-3"><%= list.name %></h3>
    <div class='border rounded p-3 bg-white mb-4 shadow-sm'>
      <div class="row justify-content-between border-bottom">
        <p class="text-left col-2"><em>Producteur</em></p>
        <h6 class="text-center col-2"><em>Score global</em></h6>
        <p class="text-center col-2"><em>Environnement</em></p>
        <p class="text-center col-2"><em>Social</em></p>
        <p class="text-center col-2"><em>Economie</em></p>
        <p class="text-center col-2"><em>Propriétés</em></p>
      </div>
      <% list.farms.each do |farm| %>
        <div class='row justify-content-between my-4 border-bottom'>
          <div class="col-2">
            <%= link_to "#{farm.name}", farm_path(farm), class: 'text-left text-decoration-none p-2 bg-success text-white rounded'%>
          </div>
          <h6 class=" col-2 text-center"><%= farm.total %></h6>
          <p class="text-center col-2"><%= farm.average("Environnemental") %></p>
          <p class="text-center col-2"><%= farm.average("Social") %></p>
          <p class="text-center col-2"><%= farm.average("Économique") %></p>
          <p class="text-center col-2"><%= farm.average("Global") %></p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>