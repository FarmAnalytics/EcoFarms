<div class='d-flex my-3'>
  <% @lists.each do |list| %>
    <div class="d-flex shadow-sm btn border rounded bg-white col-3 mr-2 text-left p-0">
      <a id='list' class="tablinks listTrigger col-10 py-3" data-target="<%= list.name%>" >
        <h5 class='text-primary'><%= list.name %></h5>
        <div class="d-flex justify-content-between">
          <%# <p class='text-warning m-0'><em><%= list.shop.address</em></p> %>
          <div class='text-success'>
            <% if list.private %>
              <i class="fas fa-eye-slash"></i>
            <% else %>
              <i class="fas fa-eye"></i>
            <% end %>
          </div>
        </div>
      </a>
      <div class="col-2 float-right">
        <%= link_to list_path(list), method: :delete, remote: true do %>
          <span class="btn py-0">×</span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


