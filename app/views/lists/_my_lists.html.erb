<div class='row my-3'>
  <% @lists.each do |list| %>
    <a id='list' class="tablinks shadow-sm listTrigger border rounded bg-white col-3 mr-2 text-left p-3" data-target="<%= list.name%>" >
        <h5 class='text-primary'><%= list.name %></h5>
        <div class="d-flex justify-content-between">
          <p class='text-warning'><em><%= list.shop.address %></em></p>
          <div class='text-success'>
            <% if list.private %>
              <i class="fas fa-eye-slash"></i>
            <% else %>
              <i class="fas fa-eye"></i>
            <% end %>
          </div>
        </div>
    </a>
  <% end %>
</div>


