<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th></th>
        <th>Nom</th>
        <th>Boutique</th>
        <th>Visibilit√©</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td class="text-center">
            <a class="tablinks listTrigger" data-target="<%= list.name %>">
              <i class="btn-sm btn-outline-success fas fa-plus"></i>
            </a>
          </td>
          <td><%= list.name %></td>
          <td><%= Shop.find(list.shop_id).address %></td>
          <td><%= list.private ? "private" : "public"%></td>
          <td>
            <%= link_to list_path(list), method: :delete do %>
                <i class="mr-2 fas fa-trash-alt"></i>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
