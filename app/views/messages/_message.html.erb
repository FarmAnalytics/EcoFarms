<% if message.chatroom.farm.user == message.user %>
      <div class="message-container my-3 text-right" id="message-<%= message.id %>">
        <i class="author">
          <span><%= message.user.first_name %></span>
          <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </i>
        <p class="m-0"><%= message.content %></p>
      </div>
      <% else %>
      <div class="message-container my-3" id="message-<%= message.id %>">
        <i class="author">
          <span><%= message.user.first_name %></span>
          <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </i>
        <p class="m-0"><%= message.content %></p>
      </div>
      <% end %>

